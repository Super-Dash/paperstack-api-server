{
    "name": "paperstack-api-server",
    "version": "0.1.4",
    "description": "作业收集平台PaperStack的API服务器",
    "main": "lib/app.js",
    "repository": "https://github.com/super-dash/paperstack-api-server.git",
    "author": "github.com/super-dash",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf ./lib && rm -rf ./log",
        "lint": "eslint src --ext .ts",
        "lint:strict": "yarn lint --max-warnings 0",
        "lint:fix": "yarn lint --fix",
        "build": "tsc",
        "build:watch": "yarn build --watch",
        "start": "node lib/app.js",
        "start:dev": "ts-node src/app.ts",
        "start:watch": "nodemon --watch lib --delay 3",
        "test": "echo \"No test sepcified.\""
    },
    "devDependencies": {
        "@types/bcrypt": "^3",
        "@types/bluebird": "^3",
        "@types/cors": "^2",
        "@types/express": "^4",
        "@types/js-yaml": "^3",
        "@types/node": "^12",
        "@types/randomstring": "^1",
        "@types/validator": "^10",
        "@typescript-eslint/eslint-plugin": "^2",
        "@typescript-eslint/parser": "^2",
        "eslint": "^6",
        "eslint-plugin-import": "^2",
        "nodemon": "^1"
    },
    "dependencies": {
        "bcrypt": "3.0.6",
        "cors": "^2",
        "express": "^4",
        "js-yaml": "^3",
        "pg": "^7",
        "pg-hstore": "^2",
        "randomstring": "^1",
        "sequelize": "^5",
        "typescript": "^3",
        "validator": "^10",
        "winston": "^3"
    }
}
